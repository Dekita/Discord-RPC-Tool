    "dependencies": {
        "bent": "^7.3.12",
        "discord-rpc": "^4.0.1",
        "json-stringify-pretty-compact": "^3.0.0"
    },
    "devDependencies": {
        "electron-builder": "^22.14.13",
        "electron": "17.2.0"
    },
    "build": {
        "appId": "com.dekitarpg.rpc",
        "productName": "Discord RPC Tool",
        "directories": {
            "output": "build"
        },
        "win": {
            "target": [{"target": "nsis","arch": "x64"}],
