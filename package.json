{
    "name": "dekita-rpc-tool",
    "version": "0.0.96",
    "productName": "Discord RPC Tool",
    "description": "Discord RPC Tool written by DekitaRPG",
    "main": "src/main.js",
    "repository": "git@github.com:dekita/discord-rpc-tool",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "pack": "electron-builder --dir",
        "release": "electron-builder --publish always"
    },
    "keywords": [],
    "author": {
        "name": "Dekita (DekitaRPG)",
        "email": "dekitarpg@gmail.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "dependencies": {
        "bent": "^7.3.12",
        "chroma-js": "^2.4.2",
        "discord-rpc": "^4.0.1",
        "ejs-electron": "^2.1.1",
        "electron-updater": "^5.0.1",
        "json-stringify-pretty-compact": "^3.0.0",
        "luxon": "^2.3.1",
        "node-gyp": "^9.0.0"
    },
    "devDependencies": {
        "electron": "^18.0.4",
        "electron-builder": "^23.0.3"
    },
    "build": {
        "appId": "com.dekitarpg.rpc",
        "productName": "Discord RPC Tool",
        "directories": {
            "output": "build"
        },
        "win": {
            "target": "nsis",
            "icon": "src/img/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "src/img/icon.png",
            "category": "Utility"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "uninstallerIcon": "src/img/icon.ico",
            "installerIcon": "src/img/icon.ico",
            "license": "LICENSE",
            "perMachine": true,
            "oneClick": false
        },
        "appImage": {
            "license": "LICENSE"
        }
    }
}
