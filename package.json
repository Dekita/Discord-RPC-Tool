{
    "name": "dekita-rpc-tool",
    "productName": "Discord RPC Tool",
    "version": "0.0.9",
    "description": "Discord RPC Tool written by DekitaRPG",
    "main": "src/main.js",
    "scripts": {
        "start": "electron src/main.js",
        "build": "electron-builder"
    },
    "keywords": [],
    "author": {
        "name": "Dekita (DekitaRPG)",
        "email": "dekitarpg@gmail.com"
    },
